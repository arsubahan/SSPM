<div id="main-content" class="container" style=" margin-top: 0px; background-size: 100% 100%;"
    ng-controller="enquireCtrl">

    <div align="center" style="width:80% ; background-color:rgb(25, 68, 2); color:white">
        <span id="indextitle">Tell us you problem</span>
    </div>

    <div>
        <form style="width: 100%;" name="enqfrm">

            {{>toaster}}

            <div style="background-color:transparent;">
                <label>Property Type:<font color="red">*</font></label> &nbsp; &nbsp;
                <input type="radio" class="form-check-input" name="enqproptype" value="R" ng-model="enqdet.enqproptype">
                Residential
                <input type="radio" class="form-check-input" name="enqproptype" value="C" ng-model="enqdet.enqproptype">
                Commercial
                <input type="radio" class="form-check-input" name="enqproptype" value="F" ng-model="enqdet.enqproptype">
                Factory
            </div>

            <div>
                <label>Company Name</label>
                <input type="hidden" name="enqtrnsno" ng-model="enqdet.enqtrnsno" size="25px">
                <input type="text" class="form-control-sm" placeholder="Please Enter Company Name" name="enqconame"
                    ng-model="enqdet.enqconame">
            </div>

            <div style="background-color:transparent">
                <label>Name:<font color="red">*</font></label>
                <input type="hidden" name="enqtrnsno" ng-model="enqdet.enqtrnsno" size="25px">
                <input type="text" class="form-control-sm" placeholder="Name" name="enqcontactperson"
                    ng-model="enqdet.enqcontactperson">
            </div>

            <div>
                <label style="vertical-align: top;">Address:</label>
                <textarea id="textarea_resize" placeholder="Your Address" name="enqaddress" ng-model="enqdet.enqaddress"
                    style="background-color: transparent;"></textarea>
            </div>

            <div>
                <label> Contact No.<font color="red">*</font></label>
                <input type="text" class="form-control form-control-sm" placeholder="Telephone/mobile no"
                    name="enqcontactno" ng-model="enqdet.enqcontactno">
            </div>

            <div>
                <label>Email<font color="red">*</font></label>
                <input type="text" class="form-control form-control-sm" placeholder="Email Address" name="enqemail"
                    ng-model="enqdet.enqemail">
            </div>

            <div>
                <label style="vertical-align: top;">Service Premises </label>
                <textarea id="textarea_resize" type="text" class=" form-control-sm" placeholder="Your Address"
                    name=" enqpremises" ng-model="enqdet.enqpremises">
                        </textarea>
            </div>

            <div>
                <label>Services Required</label>
                <div ng-repeat-start="pestitm in pestlist track by $index" class="clearfix" ng-if="$index % 4 == 0"
                    style="background-color:transparent;">
                </div>
                <div ng-repeat-end class="col-sm-6 bg-danger"
                    style="background-color:rgb(243, 239, 181); cursor: pointer, z-index: 1; ">

                    <input type="checkbox" ng-model="pestitm.isSelected" checklist-value="pestitm.pestdesc"
                        ng-true-value="'1'" ng-false-value="'0'"> \{{pestitm.pestdesc}}
                </div>
            </div>

            <div>
                <label style="vertical-align: top;">Remarks</label>
                <textarea id="textarea_resize" type="text" class=" form-control-sm" placeholder="Remarks "
                    name="enqremarks" ng-model="enqdet.enqremarks">
                        </textarea>
            </div>
            <div>
                <button type="submit" class="btn btn-primary" ng-click="submitdat()">Submit</button>
            </div>
        </form>
    </div>
</div>