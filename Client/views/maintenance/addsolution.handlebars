<div class="container" ng-controller="pestsolCtrl">
    <div align='center' style='margin-top:-30px'>
        <h3 class="page-header"><span ng-bind='wssmode'></span> of Pest Solution Codes File</h3>
    </div>

    <form name="fldtyfrm" style=" font-size :smaller;padding-left:50px; margin-top:10px" method="get">
       {{>toaster}}
       
        <div class="form-control" class="col-md-6" ng-controller="pestCtrl">
            <label>Pest Code:* :</label>
            <input name="soltrnsno" style="text-transform: uppercase;" ng-model="soldet.soltrnsno"
                ng-disabled="isDisabled" type="hidden" />

            <select ng-model="soldet.solpestcd " name='solpestcd'
                ng-options="opt.pestcd  as opt.pestdesc  for opt in pestlist">
                <option>--</option>
            </select>
        </div>

        <div>
            <text-angular name="soldesc" ng-model="soldet.soldesc" required></text-angular>
        </div>

        <div>
            <button type="submit" class="btn btn-default" ng-click="submitsoldat()"><span
                    ng-bind='wssmode'></span></button>
            <a ng-if="wssmode != 'Add'" class="btn btn-default" id="txtbackbut" href="/dispsolution#?wssmode=Maintain">
                back
            </a>
            <a ng-if="wssmode == 'Add'" class="btn btn-default" id="txtbackbut" href="/dashboard">
                back
            </a>

        </div>

    </form>
</div>