div class="container" ng-controller="templateCtrl">
<h1>Maintenance of template Codes File - <b><span ng-bind='usname'></span></b></h1>

{{!-- <flash-message duration="5000"></flash-message> --}}
<div id="myDIV">
    <dir-pagination-controls max-size="5" direction-links="true" boundary-links="true" style="margin-left :85px">
    </dir-pagination-controls>



    <table class="table" style="font-size:8pt">
        <thead>
            <tr>
                <th width='80px'>template Code:</th>
                <th width='80px'>template Name:</th>
                <th width='250px'>Description</th>
                <th>Action</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><input class="form-control" ng-model="txtsearch.templatecd"></td>
               <td><input class="form-control" ng-model="txtsearch.templatename"></td>
                <td><input class="form-control" ng-model="txtsearch.templatedesc "></td>
                <td><button class="btn btn-primary" ng-click="searchdet(txtsearch)">Search</button></td>
            </tr>


            <tr dir-paginate="templatetyrc in templatelist  | orderBy:'templatedesc' | itemsPerPage:5">
                <td width='80px'>
                    <span ng-bind="templatetyrc.templatecd | uppercase" ng-bind="templatetyrc.templatecd | uppercase"></span>
                </td>
                <td width="250px" ng-bind="templatetyrc.templateDesc "></td>
                <td width="50px"><button class="btn btn-danger" ng-click="del(templatetyrc._id)">Delete</button></td>
                <td width="50px"><button class="btn btn-warning" ng-click="edit(templatetyrc._id)">Edit</button></td>
            </tr>
        </tbody>
    </table>
    <dir-pagination-controls max-size="5" direction-links="true" boundary-links="true" style="margin-left :85px">
    </dir-pagination-controls>
</div>
</div>