<div id="main-content" class="container" style=" margin-top: 0px; background-size: 100% 100%;"
    ng-controller="clientCtrl">

    <div>
        <form style="width: 80%;" name="enqfrm">
            {{>toaster}}

            <table border="0" class="table" style="font-size:9pt;">
                <tr>
                    <td align="center" colspan="4">
                        <h5 style="background-color: green;color:honeydew">
                            Update Profile of \{{clID}} <span ng-bind="clname"></span>

                        </h5>
                    </td>
                </tr>

                <tr ng-if="cllist.clconame != undefined">
                    <td wodth="180px">
                        <label>Company Name</label>
                    </td>
                    <td colspan="3">
                        <input type="hidden" name="enqtrnsno" ng-model="cllist.enqtrnsno" size="25px">
                        <input type="text" class="form-control-sm" placeholder="Please Enter Company Name"
                            name="enqconame" ng-model="cllist.clconame">
                    </td>
                </tr>
                <tr> {{!-- ng-if="cllist.enqproptype != 'R'"> --}}
                    <td>
                        <label>Contact person </label>
                    </td>
                    <td colspan="3">
                        <input type="text" class="form-control-sm" placeholder="Name" name="clcontactperson"
                            ng-model="cllist.clcontactperson">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label style="vertical-align: top;">Address</label>
                    </td>
                    <td colspan="3">
                        <textarea type="text" class=" form-control-sm" placeholder="Your Address" name="claddress"
                            ng-model="cllist.claddress" cols="60" rows="2">\{{cllist.claddress}}
                        </textarea>

                    </td>
                </tr>
                <tr>
                    <td>
                        <label> Contact No.</label>
                    </td>
                    <td>

                        <input type="text" class="form-control form-control-sm" placeholder="Telephone/mobile no"
                            name="clcontactno" ng-model="cllist.clcontactno">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Email</label>
                    </td>
                    <td>
                        <input type="text" class="form-control form-control-sm" placeholder="Email Address"
                            name="clemail" ng-model="cllist.clemail">
                    </td>
                </tr>

            </table>

            <button type="submit" class="btn btn-primary" ng-click="submitdat()">Submit</button>
    </div>

    </form>
</div>

</div>