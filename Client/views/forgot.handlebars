<div ng-controller="forgotCtrl">
    
    {{!-- <div ng-if="wsstype == 'Admin'"> --}}
        <h2 class=" page-header">
    Forgot Password  for \{{wsstype}}</h2>
{{!-- </div> --}}

    <form name="rstfrm" >
        <!--method="get" action="/forgot">-->
        {{#if success}}
        {{#each success}}
        <div class="alert-success" style=" font-size :smaller; color:#123a16">{{msg}}</div>
        {{/each}}
        {{else}}
        {{#if errors}}
        <!--<ul>-->
        {{#each errors}}
        <p class="alert-danger" style=" font-size :smaller; color:#5c0505">{{msg}}</p>
        {{/each}}
        <!--</ul>-->
        {{/if}}
        {{/if}}


               <!--<div ng-if="disinput">-->
            <div style="background-color:#5c0505; color:#ffd800; font-size :smaller">
                Mode : Forgot Password
            </div>
            <div class="form-group">
                <label>Enter your email address below and we will send you password reset instructions:</label>
                <input class="form-control" name="email" ng-model="resetrc.email" placeholder="Please Enter your Email Address" type="text" />
                <span ng-show="rstfrm.email.$touched && rstfrm.email.$invalid">
                    <font color="red" size=" 1">Please Enter Your Email Address</font>
                </span>

            </div>
            <div>
                <button type="submit" class="btn btn-default" ng-click="sendbut()">Reset Password</button>

            </div>

<!--</div>-->
</form>
</div>